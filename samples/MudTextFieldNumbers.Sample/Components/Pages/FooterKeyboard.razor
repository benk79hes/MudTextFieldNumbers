@page "/keyboard-footer"
@rendermode InteractiveServer

<PageTitle>Footer Keyboard Demo</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Footer Virtual Keyboard Demo</MudText>
<MudText Class="mb-8">
    This demo combines the good typing behavior of MudVirtualKeyboard with the footer positioning and auto-show/hide functionality.
    Click on any field to see the keyboard appear at the bottom of the screen.
</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Style="margin-bottom: 400px;">
            <MudText Typo="Typo.h5" GutterBottom="true">Integer Input with Footer Keyboard</MudText>
            <MudText Class="mb-4">Click the field to show the keyboard at the bottom.</MudText>
            
            <MudTextFieldIntegerWithKeyboard @bind-Value="_integerValue" 
                                             Label="Enter Integer Value" 
                                             Placeholder="Click to show keyboard"
                                             KeyboardTitle="Integer Keyboard"
                                             AllowNegative="true"
                                             Class="mb-4" />
            
            <MudText Class="mb-4"><strong>Current value:</strong> @(_integerValue?.ToString() ?? "not set")</MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Style="margin-bottom: 400px;">
            <MudText Typo="Typo.h5" GutterBottom="true">Decimal Input with Footer Keyboard</MudText>
            <MudText Class="mb-4">Click the field to show the keyboard with decimal support.</MudText>
            
            <MudTextFieldDecimalWithKeyboard @bind-Value="_decimalValue"
                                            DecimalPlaces="2"
                                            Label="Enter Decimal Value" 
                                            Placeholder="Click to show keyboard"
                                            KeyboardTitle="Decimal Keyboard"
                                            AllowNegative="true"
                                            Class="mb-4" />
            
            <MudText Class="mb-4"><strong>Current value:</strong> @(_decimalValue?.ToString("F2") ?? "not set")</MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Style="margin-bottom: 400px;">
            <MudText Typo="Typo.h5" GutterBottom="true">Price with Comma Separator</MudText>
            <MudText Class="mb-4">Example with European-style comma decimal separator.</MudText>
            
            <MudTextFieldDecimalWithKeyboard @bind-Value="_priceValue"
                                            DecimalPlaces="2"
                                            DecimalSeparator=","
                                            Label="Enter Price (€)" 
                                            Placeholder="Click to show keyboard"
                                            KeyboardTitle="Price Keyboard"
                                            AllowNegative="false"
                                            Class="mb-4" />
            
            <MudText Class="mb-4"><strong>Current value:</strong> @(_priceValue?.ToString("F2") ?? "not set") €</MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudPaper Class="pa-4" Style="margin-bottom: 400px;">
            <MudText Typo="Typo.h5" GutterBottom="true">Quantity (3 decimals)</MudText>
            <MudText Class="mb-4">High precision decimal input example.</MudText>
            
            <MudTextFieldDecimalWithKeyboard @bind-Value="_quantityValue"
                                            DecimalPlaces="3"
                                            Label="Enter Quantity" 
                                            Placeholder="Click to show keyboard"
                                            KeyboardTitle="Quantity Keyboard"
                                            AllowNegative="false"
                                            Class="mb-4" />
            
            <MudText Class="mb-4"><strong>Current value:</strong> @(_quantityValue?.ToString("F3") ?? "not set")</MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="12">
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h5" GutterBottom="true">Features</MudText>
            <MudList T="string" Dense="true">
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Good typing behavior from MudVirtualKeyboard (no JS interop issues)</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Automatic keyboard appearance on focus</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Automatic keyboard dismissal on blur</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Footer positioning with smooth slide-up animation</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Field and keyboard integrated in a single component</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Supports both integer and decimal values</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Customizable decimal separator (dot or comma)</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Optional negative number support</MudText>
                </MudListItem>
            </MudList>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private int? _integerValue;
    private decimal? _decimalValue;
    private decimal? _priceValue;
    private decimal? _quantityValue;
}
