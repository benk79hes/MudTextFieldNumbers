@page "/keyboard-footer"
@rendermode InteractiveServer

<PageTitle>Footer Keyboard Demo</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Footer Virtual Keyboard Demo</MudText>
<MudText Class="mb-8">
    These components combine the good typing behavior of MudVirtualKeyboard with footer positioning.
    Each component includes both the input field and its dedicated keyboard displayed at the bottom of the screen.
    <strong>Note:</strong> Use only ONE of these components per page, as each displays its keyboard in the footer.
</MudText>

<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="pa-4" Style="margin-bottom: 400px;">
            <MudText Typo="Typo.h5" GutterBottom="true">Integer Input with Footer Keyboard</MudText>
            <MudText Class="mb-4">The keyboard is always visible at the bottom and works perfectly with the field.</MudText>
            
            <MudTextFieldIntegerWithKeyboard @bind-Value="_integerValue" 
                                             Label="Enter Integer Value" 
                                             Placeholder="Enter a number"
                                             KeyboardTitle="Integer Keyboard"
                                             AllowNegative="true"
                                             Class="mb-4" />
            
            <MudText Class="mb-4"><strong>Current value:</strong> @(_integerValue?.ToString() ?? "not set")</MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="12">
        <MudText Typo="Typo.h5" GutterBottom="true">Other Available Components</MudText>
        <MudText Class="mb-4">
            The following components are also available but not shown here to avoid keyboard overlap. 
            Use them on separate pages or views:
        </MudText>
        <MudList T="string" Dense="true">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Keyboard">
                <MudText><strong>MudTextFieldDecimalWithKeyboard</strong> - Decimal input with footer keyboard</MudText>
            </MudListItem>
        </MudList>
    </MudItem>

    <MudItem xs="12">
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h5" GutterBottom="true">Features</MudText>
            <MudList T="string" Dense="true">
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Good typing behavior from MudVirtualKeyboard (no JS interop issues)</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Keyboard always visible in footer position</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Footer positioning with clean presentation</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Field and keyboard integrated in a single component</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Supports both integer and decimal values</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Customizable decimal separator (dot or comma)</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.Check">
                    <MudText>Optional negative number support</MudText>
                </MudListItem>
            </MudList>
            
            <MudText Typo="Typo.h6" Class="mt-4" GutterBottom="true">Usage Example</MudText>
            <MudPaper Class="pa-3" Style="background-color: #f5f5f5;">
                <code>
                    &lt;MudTextFieldIntegerWithKeyboard @@bind-Value="@@_value" <br/>
                    &nbsp;&nbsp;&nbsp;&nbsp;Label="Enter Number" <br/>
                    &nbsp;&nbsp;&nbsp;&nbsp;KeyboardTitle="My Keyboard" <br/>
                    &nbsp;&nbsp;&nbsp;&nbsp;AllowNegative="true" /&gt;
                </code>
            </MudPaper>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    private int? _integerValue;
}
